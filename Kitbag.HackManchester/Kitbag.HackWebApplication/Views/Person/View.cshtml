@model Kitbag.HackWebApplication.Models.PersonViewModel
@{
    ViewBag.Title = @Model.Name;
}

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-md-3">
        <div id="person-profile">
            <div class="image">
                @Html.RenderGravatarImage(Model.Email, 150)
            </div>

            <div class="details">
                <div class="name">@Model.Name</div>
                <div class="group">@Model.Group</div>
            </div>

            <div class="details">
                <h3>Contact Details</h3>
                <div class="email">Email : @Model.Email</div>
                <div class="telephone">Telephone : @Model.Telephone</div>
                <div class="skype">Skype : @Model.Skype</div>
            </div>

            @Html.Partial("_ListedGroups", Model.Groups)
        </div>
    </div>
    <div class="col-md-9">
        <h1 class="c-won-Font">
            <em>currently</em><strong>working</strong><em>on..</em> @Model.CurrentlyWorkingOn
        </h1>
        <h2>Status Feed</h2>
        @Html.Partial("_CentralFeed", Model.Status)
    </div>
</div>



