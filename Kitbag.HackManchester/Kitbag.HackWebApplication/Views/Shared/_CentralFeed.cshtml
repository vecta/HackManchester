@model IEnumerable<Kitbag.Domain.Status>
@{
    ViewBag.Title = "_Feed";
}

<div id="feed">
    
    @foreach(var status in Model)
    {
        <div class="feed-status">

            <div class="user-image">
                @Html.RenderGravatarImage(status.People.First().Email, 50)
            </div>
            <div class="post">
                <div class="user-name">
                    @Html.ActionLink(status.People.First().Email, "view", "person", new { id = 1 }, null)
                </div>
                <div class="message">
                    @status.Status1
                </div>
                <div class="when">
                    @status.CreatedDate.ToShortTimeString()
                </div>
            </div>
        </div>
        <hr style="clear:both" />
    }

</div>
