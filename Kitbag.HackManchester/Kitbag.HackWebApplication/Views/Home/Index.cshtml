@model Kitbag.HackWebApplication.Models.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-3">
        <h2>Profile</h2>

        @Html.Partial("_ProfileSmall", Model)

        <div class="clearfix"></div>
        <h3>User Groups</h3>
        <ul>
            @foreach(var group in Model.UserGroups)
            {
                <li>@Html.ActionLink(group.Name, "view", "group", new { id = group.Id }, null)</li>
            @*<li>@Html.ActionLink("Group 1", "view", "group", new { id = 1 }, null)</li>
            <li>@Html.ActionLink("Group 2", "view", "group", new { id = 1 }, null)</li>*@
            }
        </ul>

    </div>
    <div class="col-md-6">
        <h2>My Feed</h2>

        @Html.Partial("_UpdateStatus")
        @Html.Partial("_CentralFeed", Model.Statuses)

    </div>
    <div class="col-md-3">
        <h2>Other stuff</h2>
    </div>
</div>